doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    link(href="css/style.css", rel="stylesheet")
    link(rel="icon", href="assets/icon.png", type="image/x-icon")
    title Carrito
  body

    nav.navbar.bg-body-tertiary.container-fluid#bar
      a(href="/")
        img(src="assets/icon.png", alt="home", id="home")
      h1 Shop
      a(href="/carrito", class="ms-auto")
        img(src="assets/carrito.png", alt="Descripci√≥n de la imagen", id="carrito")



    div.container
      div.row
        each producto in productosEnCarrito
          div.col-md-3.producto.d-flex.flex-column.justify-content-between(id=producto.id)
            h2= producto.title
            div.position-relative
              img(src=producto.image, alt=producto.title, class="img-fluid")
              if producto.descuento
                .oferta OFERTA: -#{producto.porcentajeDescuento}%
                p.descripcionLarga #{producto.description}
                p.descripcionCorta #{producto.descriptionCorta}
                p Precio Original: #{producto.price} USD
                p Precio Ahora: #{producto.priceRebajado} USD
              else
                p.descripcionLarga #{producto.description}
                p.descripcionCorta #{producto.descriptionCorta}
                p Precio: #{producto.price} USD
            input(type="hidden" class="descuento" value="#{producto.descuento}")
            button(type="button", onclick=`quitarCarrito('${producto.id}')`, class="btn btn-primary") Eliminar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    script(src="js/index.js")
    
